[user]
	email = tkareine@gmail.com
	name = Tuomas Kareinen
[alias]
	br  = branch
	ci  = commit -v
	co  = checkout
	cp  = cherry-pick
	df  = diff
	dfc = diff --cached
	fep = fetch --prune
	gr  = grep -n
	lg  = log --patch-with-stat --decorate
	lt  = log --graph --pretty=format:'%C(yellow)%h%Creset%C(yellow)%d%Creset %s %C(red)%ar%Creset by %C(green)%an%Creset'
	pl  = pull --ff-only
	rv  = revert
	slg = shortlog -s -n
	st  = status
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore
[diff]
	tool = opendiff
[difftool]
	prompt = false
[format]
	numbered = auto
[merge]
	conflictstyle = diff3
[push]
	default = simple
[rebase]
	autosquash = true
[rerere]
	enabled = true
[branch "master"]
	rebase = true
