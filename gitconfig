	name = Tuomas Kareinen
[alias]
	authors = !sh -c 'git log --format=\"%an <%ae>\" ${1-master} -- | sort | uniq -c' -
	br  = branch
	ci  = commit -v
	co  = checkout
	cp  = cherry-pick
	df  = diff
	dfc = diff --cached
	fep = fetch --prune
	gr  = grep -n
	lg  = log --patch-with-stat --decorate
	pl  = pull --ff-only
	rv  = revert
	st  = status
[color]
	ui = auto
[core]
	editor = vi
	excludesfile = ~/.gitignore
[diff]
	tool = opendiff
[difftool]
	prompt = false
[format]
	numbered = auto
[merge]
	conflictstyle = diff3
[push]
	default = nothing
[rerere]
	enabled = true
