[user]
	email = tkareine@gmail.com
	name = Tuomas Kareinen
[alias]
	br        = branch
	ci        = commit -v
	co        = checkout
	cp        = cherry-pick
	df        = diff
	dfc       = diff --cached
	fep       = fetch --prune
	gr        = grep -n
	lg        = log --cc --patch-with-stat --decorate
	lt        = log --cc --graph --oneline --decorate
	pl        = pull
	rv        = revert
	s         = status -s -b -u
	slg       = shortlog -s -n
	sm        = submodule
	st        = status --long -b -u
[color]
	ui = auto
[commit]
	verbose = true
[core]
	excludesFile = ~/.config/git/ignore
[diff]
	# See https://luppeng.wordpress.com/2020/10/10/when-to-use-each-of-the-git-diff-algorithms/
	algorithm = histogram

	colorMoved = zebra
	mnemonicPrefix = true
	renames = true
	submodule = log
	tool = ediffclient
[diff "sopsdiffer"]
	textconv = sops -d
[difftool]
	prompt = true
[difftool "ediffclient"]
	cmd = emacsclient --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[fetch]
	prune = true
[format]
	numbered = true
[init]
	defaultBranch = main
[merge]
	# See https://ductile.systems/zdiff3/
	conflictStyle = zdiff3

	ff = only
	tool = ediffclient
[mergetool]
	prompt = true
[mergetool "ediffclient"]
	cmd = emacsclient --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"
[pull]
	ff = only
[push]
	default = simple
[rebase]
	autoSquash = true
[rerere]
	enabled = true
	autoUpdate = true
[status]
	submoduleSummary = 1
[submodule]
	fetchJobs = 4
[stash]
	showPatch = true
[tag]
	sort = version:refname
# Must be last: Git includes the contents of the file immediately
[include]
	path = ~/.config/git/config.host
