{
  "env": {
    "browser": true,
    "es6": true,
    "mongo": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": 1,
    "no-console": 0,
    "no-const-assign": 2,
    "no-undef-init": 2,
    "no-unneeded-ternary": 2,
    "no-unreachable": 2,
    "no-unused-expressions": 2,
    "no-unused-vars": 2,
    "prefer-const": 2,
    "quotes": [2, "double"],
    "semi": [2, "never"]
  }
}
