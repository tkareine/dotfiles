{
  "extends": ["eslint:recommended"],
  "env": {
    "browser": true,
    "es6": true,
    "mongo": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "eqeqeq": "warn",
    "no-console": "off",
    "no-const-assign": "error",
    "no-unneeded-ternary": "error",
    "no-unused-expressions": "error",
    "no-var": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "quotes": ["error", "double"],
    "semi": ["error", "never"]
  }
}
