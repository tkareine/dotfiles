--exclude=.[!.]*
--exclude=*.min.css
--exclude=*.min.js
--exclude=vendor
--exclude=vendors

--langdef=css
--langmap=css:.css
--langmap=css:+.less
--langmap=css:+.sass
--langmap=css:+.scss
--regex-css=/^[ \t]*@mixin ([A-Za-z0-9_-]+)/\1/m,mixin,mixins/
--regex-css=/^[ \t]*([A-Za-z0-9_-]+)?\.([A-Za-z0-9_-]+)/\1.\2/c,class,classes/
--regex-css=/^[ \t]*([A-Za-z0-9_-]+)?#([A-Za-z0-9_-]+)/\1#\2/i,id,ids/
--regex-css=/^[ \t]*([\$@][A-Za-z0-9_-]+): /\1/v,variable,variables/
